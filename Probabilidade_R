# Definicao Frequentista de Probabilidade

rm(list=ls())
set.seed(0)
n <- 100
x <- numeric(n)
for (i in 1:n){
  x[i] <- sample(1:6, size = 1)
}
p <- sum(x == 4)/length(x); p

--------------------------------------------
# Tres pastilhas, cada uma com 0,8 de chance de sucesso

pastilhas = seq(0,3,1)
prob_suc = 0.8
plot(pastilhas, dbinom(pastilhas, size=3, prob=prob_suc),
xlab = "Número de pastilhas que passam no teste", ylab = "Probabilidades",
main = '', axes = F, type =  "h", col = 'blue')
points(pastilhas, dbinom(pastilhas, size=3, prob=prob_suc), pch = 16, ,
col = 'blue')
axis(1, pastilhas)
axis(2, seq(0, 0.45, .05), las = 1)
abline(h=0, col = 'gray', cex = 2.5, lwd = 2)
box(bty='l')

------------------------------------------
pastilhas = seq(0,3,1)
prob_suc = 0.8
fda <- pbinom(pastilhas, size=3, prob=prob_suc)
plot(pastilhas, fda, type="s", ylab="F(x)", col=4,
     xlab = "Número de pastilhas que passam no teste", main = "fda")
abline(h=0:1, col="red")

